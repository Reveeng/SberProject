<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".authentication.AuthenticationFragment"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/logoBtn"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@drawable/custom_button_input"
            android:clickable="false"
            android:text="Sortify"
            android:fontFamily="@font/averiaserif"
            />
    </LinearLayout>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/auth_tabs"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="150dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:background="@drawable/tab_background"
        app:tabIndicator="@drawable/tab_indicator"
        app:tabIndicatorColor="@color/appGreen"
        app:tabIndicatorHeight="40dp"
        app:tabGravity="center"
        app:tabMode="fixed"
        app:tabRippleColor="@null"
        app:tabTextColor="@drawable/tab_text_selector">

        <com.google.android.material.tabs.TabItem
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Войти"

            />

        <com.google.android.material.tabs.TabItem
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Регистрация"

            />
    </com.google.android.material.tabs.TabLayout>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/veiw_pager"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@+id/auth_tabs"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="0dp"
        android:backgroundTint="@color/white" />



</RelativeLayout>